<Window x:Class="NexMeet.Views.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú Principal - NexMeet" Height="400" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#F7F7F7">
    <Grid>
        <!-- Título -->
        <TextBlock Text="Menú Principal" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Opciones del menú -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Gestionar Reservaciones" Width="200" Height="50" Margin="0,10,0,0" Click="Reservaciones_Click"/>
            <Button Content="Gestionar Oficinas" Width="200" Height="50" Margin="0,10,0,0" Click="Oficinas_Click"/>
            <Button Content="Cerrar Sesión" Width="200" Height="50" Margin="0,10,0,0" Click="CerrarSesion_Click"/>
        </StackPanel>
    </Grid>
</Window>
